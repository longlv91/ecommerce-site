{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "sku": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "short_description": {
      "type": "text"
    },
    "description": {
      "type": "richtext"
    },
    "in_stock": {
      "type": "boolean",
      "default": true
    },
    "price": {
      "type": "float",
      "required": true,
      "default": 0
    },
    "weight": {
      "type": "float"
    },
    "quantity": {
      "type": "biginteger",
      "default": "1",
      "required": true
    },
    "images": {
      "allowedTypes": [
        "images",
        "videos"
      ],
      "type": "media",
      "multiple": true
    },
    "thumbnail": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "product_options": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product-option.product-option",
      "inversedBy": "products"
    }
  }
}
